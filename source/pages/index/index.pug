			section.welcome
				.welcome__img
					img.welcome__img_ava(src=require("./img/avag.jpg"))
				.welcome__text
					h2.welcome__title #{name}
					.welcome__title_small Личный сайт веб-разработчика
				.welcome__socials
					span.welcome__socials_icon
						a(href='#' style="color: #00b69e")
							span.icon-vk.icon
